CONFIG_MCU=atmega644
CONFIG_LINKER_RELAX=n
CONFIG_MCU_FREQ=8000000
CONFIG_BOOTLOADER=y
CONFIG_BOOT_DEVID=0x49454331
CONFIG_BOOT_MINOR=0
